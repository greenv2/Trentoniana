      function optionModal(a){
        switch(a) {
          case 1: // pdf
            modal = document.getElementById('pdfModal');
            break;
          case 2: //image
            modal = document.getElementById('imgModal');
            break;
          case 3: // music
            modal = document.getElementById('musModal');
            break;
          case 4: //3D
            modal = document.getElementById('3dModal');
            break;
          case 5: //video
            modal = document.getElementById('vidModal');
            break;
        }
        modal.style.display = "block";
      }
      marker2.addListener('click', function() {
        console.log('why isnt it working');
        optionModal(2);
        }
      );
      marker.addListener('click', function() {
        optionModal(1);
        }
      );

      // When the user clicks on <span> (x), close the modal
      span.onclick = function() {
        modal.style.display = "none";
      }

      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
      if (event.target == modal) {
          modal.style.display = "none";
      }
    }
  </script>
